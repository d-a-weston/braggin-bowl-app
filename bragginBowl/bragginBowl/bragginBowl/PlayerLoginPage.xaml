<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bragginBowl.PlayerLoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="GamertagEntry" Placeholder="Gamertag" Text=""/>
            <Entry x:Name="PasswordEntry" IsPassword="true" Placeholder="Password" Text=""/>
            <Button Text="Login" Clicked="Login"/>
            <Label Text="Or"/>
            <Button Text="Create New Account" Clicked="CreateAccount" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>